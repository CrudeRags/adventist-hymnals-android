<resources>

    <style name="Hymnal.AppBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorPrimary">@color/window_background</item>
        <item name="colorControlNormal">@color/primary</item>
    </style>

    <style name="Hymnal.Toolbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="searchViewStyle">@style/searchStyle</item>
    </style>

    <style name="Hymnal.Toolbar.White" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="searchViewStyle">@style/searchStyle</item>
    </style>

    <style name="searchStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="queryHint">@string/search_hint</item>
        <item name="searchIcon">@null</item>
    </style>

    <style name="AlertDialog.ButtonBar" parent="@style/Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
    </style>

    <style name="AlertDialog.TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="AlertDialog.TitlePanel" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">?attr/dialogPreferredPadding</item>
    </style>

    <style name="AlertDialog.BodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="fontFamily">@font/google_sans</item>
    </style>

    <style name="Hymnal.TextAppearance.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/sans_regular</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="Hymnal.TextAppearance.Body.Secondary">
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="Hymnal.TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/sans_bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Hymnal.TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/sans_regular</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Hymnal.TextAppearance.Medium.Secondary">
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="Hymnal.TextAppearance.Toolbar" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/averia_libre_bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>