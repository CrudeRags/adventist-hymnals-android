<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:drawablePadding="@dimen/spacing_medium"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingStart="@dimen/spacing_medium_large"
        android:paddingTop="@dimen/spacing_list"
        android:paddingEnd="@dimen/spacing_medium_large"
        android:paddingBottom="@dimen/spacing_normal"
        android:textAppearance="@style/Hymnal.TextAppearance.Medium"
        tools:text="Christ In Song" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:minHeight="150dp"
        android:paddingStart="@dimen/spacing_medium"
        android:paddingEnd="@dimen/spacing_medium"
        android:paddingBottom="@dimen/spacing_medium"
        tools:listitem="@layout/hymnal_card" />

</LinearLayout>