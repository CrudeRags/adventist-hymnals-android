<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="110dp"
    android:layout_height="160dp"
    android:layout_margin="6dp"
    android:stateListAnimator="@animator/lift_on_touch"
    app:cardBackgroundColor="@color/accent"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/blank"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/scrim"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_medium"
            android:paddingEnd="@dimen/spacing_normal"
            android:paddingBottom="@dimen/spacing_medium">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:breakStrategy="simple"
                android:ellipsize="end"
                android:gravity="center"
                android:hyphenationFrequency="none"
                android:paddingBottom="@dimen/spacing_micro"
                android:textAppearance="@style/Hymnal.TextAppearance.Title"
                android:textColor="@color/white"
                tools:text="Christ In Song" />

            <TextView
                android:id="@+id/chipLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/bg_on_surface"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textAppearance="@style/Hymnal.TextAppearance.Body"
                android:textSize="@dimen/text_size_xsmall"
                tools:text="Ndebele / Isuzulu" />

        </LinearLayout>
    </FrameLayout>

</com.google.android.material.card.MaterialCardView>